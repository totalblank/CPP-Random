{
  "version": 5,
  "cmakeMinimumRequired": { "major": 3, "minor": 20 },
  "configurePresets": [
    {
      "name": "gcc-debug",
      "displayName": "GCC Debug",
      "generator": "Ninja",
      "binaryDir": "build/gcc-debug",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "CMAKE_C_COMPILER": "/usr/bin/gcc",
        "CMAKE_CXX_COMPILER": "/usr/bin/g++",
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON"
      }
    },
    {
      "name": "gcc-release",
      "displayName": "GCC Release",
      "generator": "Ninja",
      "binaryDir": "build/gcc-release",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "CMAKE_C_COMPILER": "/usr/bin/gcc",
        "CMAKE_CXX_COMPILER": "/usr/bin/g++",
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON"
      }
    }
  ],
  "buildPresets": [
    { "name": "gcc-debug",   "configurePreset": "gcc-debug" },
    { "name": "gcc-release", "configurePreset": "gcc-release" }
  ],
  "testPresets": [
    { "name": "test-gcc-debug",   "configurePreset": "gcc-debug" },
    { "name": "test-gcc-release", "configurePreset": "gcc-release" }
  ]
}

